<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="false">
    
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>dispatch</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        
        <!-- 스프링 설정을 XML로 할 것인지 Java 객체로 할 것인지 지정한다.
            기본 값은 XmlWebApplicationContext 를 이용하여 
            XML 파일로 설정 정보를 다룬다.
          -->
        <init-param>
            <param-name>contextClass</param-name>
            <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
        </init-param>
        
        <!-- 위에서 지정한 설정 정보를 다루는 관리자에 따라
            다음 값이 결정된다.
            위에서 기본 값을 사용한다고 했으면, 
            다음 값은 설정 정보를 담은 XML파일이다.
            위에서 자바 객체를 사용하겠다고 했으면, 
            @Configuration 애노테이션이 붙은 자바 클래스 이름을 지정한다.
             -->
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>java100.app.AppConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>dispatch</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    

</web-app>
